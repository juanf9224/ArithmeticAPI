{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src/",
    "baseUrl": "src/",
    "outDir": "build"
  },
  "include": [
    "src/",
    "src/**/__mocks__/*.ts",
    "src/**/*.spec.ts",
    "src/setupTests.ts", "src/swagger-docs.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
